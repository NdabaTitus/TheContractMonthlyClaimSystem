@{
    ViewData["Title"] = "Claim Submission";
}

<h2>Submit a Claim</h2>

<form>
    <div>
        <label for="month">Claim Month:</label>
        <input type="month" id="month" name="claimMonth" />
    </div>

    <div>
        <label for="hoursWorked">Hours Worked:</label>
        <input type="number" id="hoursWorked" name="hoursWorked" />
    </div>

    <div>
        <label for="hourlyRate">Hourly Rate:</label>
        <input type="number" id="hourlyRate" name="hourlyRate" step="0.01" />
    </div>

    <button type="submit">Submit Claim</button>
</form>
